<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <Button
        android:id="@+id/simple_entity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickSimpleEntity"
        android:text="Open_SimpleEntity" />

    <Button
        android:id="@+id/queries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="onClickQueries"
        android:text="Queries" />

    <Button
        android:id="@+id/joins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="onJoinsClcik"
        android:text="joins" />

    <Button
        android:id="@+id/keep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="onKeepSectionsClcik"
        android:text="keep sections" />

    <Button
        android:id="@+id/relations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="onRelationsClick"
        android:text="Relations" />

</LinearLayout>
